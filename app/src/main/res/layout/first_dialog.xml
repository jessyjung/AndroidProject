<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="450dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:text="지역 선택"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_close" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text1"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@color/black" />

            <Button
                android:id="@+id/b1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/text1"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/dialog_btn"
                android:text="서울"
                android:textAllCaps="false"
                android:textColor="#3A3238"
                android:textSize="20dp" />
            <Button
                android:id="@+id/b2"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/text1"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/b1"
                android:layout_marginLeft="11dp"
                android:text="경기"
                android:textSize="20dp"
                android:textColor="#3A3238"
                android:background="@drawable/dialog_btn"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/b3"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/text1"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/b2"
                android:layout_marginLeft="11dp"
                android:text="인천"
                android:textSize="20dp"
                android:textColor="#3A3238"
                android:background="@drawable/dialog_btn"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/b4"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/b1"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/dialog_btn"
                android:text="강원"
                android:textAllCaps="false"
                android:textColor="#3A3238"
                android:textSize="20dp" />
            <Button
                android:id="@+id/b5"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/b1"
                android:layout_toRightOf="@id/b4"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="대전"
                android:textSize="20dp"
                android:textColor="#3A3238"
                android:background="@drawable/dialog_btn"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/b6"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/b1"
                android:layout_toRightOf="@id/b5"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="충청"
                android:textSize="20dp"
                android:textColor="#3A3238"
                android:background="@drawable/dialog_btn"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/b7"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/b4"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:text="대구"
                android:textSize="20dp"
                android:textColor="#3A3238"
                android:background="@drawable/dialog_btn"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/b8"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/b4"
                android:layout_toRightOf="@id/b7"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="부산"
                android:textSize="20dp"
                android:textColor="#3A3238"
                android:background="@drawable/dialog_btn"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/b9"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/b4"
                android:layout_toRightOf="@id/b8"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="울산"
                android:textSize="20dp"
                android:textColor="#3A3238"
                android:background="@drawable/dialog_btn"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/b10"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/b7"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:text="경상"
                android:textSize="20dp"
                android:textColor="#3A3238"
                android:background="@drawable/dialog_btn"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/b11"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/b7"
                android:layout_toRightOf="@id/b10"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="광주"
                android:textSize="20dp"
                android:textColor="#3A3238"
                android:background="@drawable/dialog_btn"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/b12"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/b7"
                android:layout_toRightOf="@id/b11"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="제주"
                android:textSize="20dp"
                android:textColor="#3A3238"
                android:background="@drawable/dialog_btn"
                android:textAllCaps="false"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>