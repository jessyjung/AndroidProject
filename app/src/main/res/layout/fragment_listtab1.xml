<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listtab1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/list_textview_background"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/txt_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_d"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/blue"
            android:layout_below="@id/top"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txt_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/img_d"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_text_bg"
            android:padding="10dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/edit_text_bg"
            android:layout_below="@id/txt_de"
            android:layout_toRightOf="@id/img_d"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/txt_det"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/edit_text_bg"
            android:layout_below="@id/txt_detail"
            android:layout_toRightOf="@id/img_d"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:padding="10dp" />
        <TextView
            android:id="@+id/minage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="만 12세 이상"
            android:textStyle="bold"
            android:background="@drawable/edit_text_bg"
            android:layout_below="@id/txt_det"
            android:layout_toRightOf="@id/img_d"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>

