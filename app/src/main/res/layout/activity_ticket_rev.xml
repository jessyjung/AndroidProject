<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ticket_RevActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/back_button"
        android:clickable="true"
        android:src="@drawable/ic_back"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:background="@drawable/ticket_background"
        android:orientation="vertical"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_ti1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/donglebold"
                android:text="PD20560"
                android:textSize="30dp"
                android:textFontWeight="600"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/bacode"/>
        </LinearLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@drawable/dotted_ho"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="백희진 첼로 리사이클"
            android:fontFamily="@font/donglebold"
            android:textSize="25dp"
            android:textFontWeight="500"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="-10dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="연주: "
                android:fontFamily="@font/donglebold"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="백희진, 백희영"
                android:textSize="20dp"
                android:fontFamily="@font/donglebold"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@drawable/dotted_ho"
            android:layout_marginTop="-10dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:fontFamily="@font/donglebold"
            android:text="공연날짜"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:fontFamily="@font/donglebold"
            android:text="2021-08-28"
            android:textSize="25dp"
            android:textFontWeight="500"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@drawable/dotted_ho"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:text="공연시간"
            android:textSize="20dp"
            android:fontFamily="@font/donglebold"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:text="1시간 30분"
            android:textSize="25dp"
            android:textFontWeight="500"
            android:fontFamily="@font/donglebold"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@drawable/dotted_ho"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:text="티켓 가격"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/donglebold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:text="40000원"
            android:textSize="25dp"
            android:textFontWeight="500"
            android:fontFamily="@font/donglebold"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@drawable/dotted_ho"/>

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="구매완료"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/btn_login_signup"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="구매내역 공유하기"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/donglebold"
            android:layout_marginStart="10dp"
            android:layout_weight="1"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/facebook"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/insta"
            android:layout_marginLeft="5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/kakao"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/dotted_ho"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:text="공연안내"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/donglebold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/donglebold"
        android:gravity=""
        android:text="· 공연전까지 취소가 가능하며 공연당일에는 취소가 불가능합니다. 또한 공연시간 이후에는 입장이 제한됩니다."
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/donglebold"
        android:gravity=""
        android:text="· 지연입장에 의한 관람불편을 최소화 하고자 본 공연은 약 10분 후 시작됩니다."
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/donglebold"
        android:layout_marginLeft="40dp"
        android:text="· 쾌적한 관람을 위해 공연시간 이전에 입장 부탁드립니다."/>

</LinearLayout>
